TARGET = client

#Compilar fifo
OBJS = ./obj/cliente.o ./obj/cliente_fifo.o 
SOURCES = cliente_fifo.c cliente.c

#Compilar socket
#OBJS = ./obj/cliente.o  ./obj/cliente_socket.o 
#SOURCES = cliente_socket.c cliente.c

#Compilar queue
#OBJS = ./obj/cliente.o  ./obj/cliente_queue.o 
#SOURCES = cliente_queue.c cliente.c

#Compilar shmem
#OBJS = ./obj/cliente.o  ./obj/cliente_shmem.o 
#SOURCES = cliente_shmem.c cliente.c

CFLAGS = -Wall -O -Wuninitialized -g -lrt -lpthread 


.SILENT:

$(TARGET): $(OBJS)
	gcc -o $(TARGET) $(OBJS) -lm $(CFLAGS)

$(OBJS) : $(SOURCES) 
	gcc -c $(SOURCES)
	mv *.o ./obj

clean:
	-rm -rf ./obj/*.o
	-rm -rf servidor
